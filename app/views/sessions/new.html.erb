<% if flash[:alert] %>
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<div class="alert alert-danger">
				<%= flash[:alert] %>. Please try again.
			</div>
		</div>
	</div>
<% end %>
<%= form_tag sessions_path do %>
  <form role="form">
  	<div class="row">
		  <div class="col-sm-6 col-sm-offset-3 form-group">
			  <h2 id="login_text">Please log in</h2>
		    <%= label_tag :user_name, :user_name, :class => 'sr-only' %>
			  <%= text_field_tag :user_name, params[:user_name], :placeholder => 'User name', :class => 'form-control input-lg' %>
		  </div>
	  </div>
	  <div class="row">
		  <div class="col-sm-6 col-sm-offset-3 form-group">
		    <%= label_tag :password, :password, :class => 'sr-only' %>
		    <%= password_field_tag :password, nil, :placeholder => 'Password' ,:class => 'form-control input-lg' %>
	    </div>
	  </div>
	  <div class="row">
	  	<div class="col-sm-6 col-sm-offset-3">
				<%= submit_tag 'Log In', :class => 'btn btn-default btn-lg btn-block' %>
			</div>
		</div>
	</form>
<% end %>
