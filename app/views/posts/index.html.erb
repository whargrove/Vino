<h1>Posts</h1>

<div class="table-responsive">
	<table class="table table-hover">
	  <thead>
	    <tr>
	      <th>Title</th>
	      <th>Published date</th>
	      <th>Actions</th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @posts.each do |post| %>
	      <tr>
	        <td><%= link_to post.title, post %></td>
	        <td><%= post.created_at.localtime %></td>
	        <td><%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-default btn-sm' %>
							<%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-sm' %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>

<br>

<%= link_to 'New Post', new_post_path %>
