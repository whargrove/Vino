<%= form_for ([:admin, @post]) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<form role="form">
    <%= f.hidden_field :user_id, :value => session[:user_id] %>
	  <div class="form-group">
	    <%= f.label :title %><br>
	    <%= f.text_field :title, :class => 'form-control' %>
	  </div>
    <div class="form-group">
      <div class="row">
        <div class="col-lg-12">
          <div class="input-group">
            <span class="input-group-addon">
              <%= f.label :link, :class => 'sr-only' %>
              <%= f.check_box :link %>
            </span>
            <%= f.label :link_url, :class => 'sr-only' %>
            <%= f.text_field :link_url, :class => 'form-control', :placeholder => 'Link URL' %>
          </div><!-- .input-group -->
        </div><!-- col-lg-12 -->
      </div><!-- row -->
    </div><!-- .form-group -->
	  <div class="form-group">
	    <%= f.label :content %><br>
	    <%= f.text_area :content, :class => 'form-control', :rows => '15' %>
	  </div>
    <div class="form-group">
      <%= f.submit :class => 'btn btn-default btn-lg btn-block' %>
    </div>
	</form>
<% end %>
