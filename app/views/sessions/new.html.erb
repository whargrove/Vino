<%= form_tag sessions_path do %>
  <form role="form">
  	<div class="row" style="margin-top:20px">
  	<% if flash[:alert] %>
			<div class="col-lg-8 col-lg-offset-2">
				<div class="alert alert-danger alert-dismissable">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					<%= flash[:alert] %>. Please try again.
				</div>
			</div>
		<% end %>
		  <div class="col-lg-8 col-lg-offset-2 form-group">
		    <%= label_tag :user_name, :user_name, :class => 'sr-only' %>
			  <%= text_field_tag :user_name, params[:user_name], :placeholder => 'User name', :class => 'form-control input-lg' %>
		  </div>
	  </div>
	  <div class="row">
		  <div class="col-lg-8 col-lg-offset-2 form-group">
		    <%= label_tag :password, :password, :class => 'sr-only' %>
		    <%= password_field_tag :password, nil, :placeholder => 'Password' ,:class => 'form-control input-lg' %>
	    </div>
	  </div>
	  <div class="row">
	  	<div class="col-lg-8 col-lg-offset-2">
				<%= submit_tag "Log In", :class => 'btn btn-primary btn-lg pull-left' %>
			</div>
		</div>
	</form>
<% end %>
