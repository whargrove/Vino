<%= form_tag sessions_path do %>
  <form role="form">
	  <div class="form-group">
	    <%= label_tag :user_name, :user_name, :class => 'sr-only' %>
		    <%= text_field_tag :user_name, params[:user_name], :placeholder => 'User name', :class => 'form-control input-lg' %>
	  </div>
	  <div class="form-group">
	    <%= label_tag :password, :password, :class => 'sr-only' %>
	    <%= password_field_tag :password, nil, :placeholder => 'Password' ,:class => 'form-control input-lg' %>
	  </div>
			<%= submit_tag "Log In", :class => 'btn btn-primary btn-lg btn-block' %>
	</form>
<% end %>
