<h1>Posts</h1>

<div class="table-responsive">
	<table class="table table-hover">
	  <thead>
	    <tr>
	      <th>Title</th>
	      <th>Link</th>
	      <th>Author</th>
	      <th>Published date</th>
	      <th>Actions</th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @posts.each do |post| %>
	      <tr>
	        <td><%= link_to post.title, post %></td>
	        <% if post.link %>
		        <td><span class="glyphicon glyphicon-link"></span></td>
	        <% else %>
	        	<td>&nbsp;</td>
	        <% end %>
	        <td><%= post.user_id ? User.find(post.user_id).first_name : nil %></td>
	        <td><%= post.created_at.localtime %></td>
	        <td><%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-default btn-sm' %>
							<%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-sm' %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>

<%= link_to 'New Post', new_post_path, :class => 'btn btn-primary btn-lg' %>
