source 'https://rubygems.org'

gem 'rails', :git => 'https://github.com/rails/rails.git', :tag => 'v4.2.0.beta1'

# Use postgreSQL as the database for Active Record
gem 'pg'

# Use SCSS for stylesheets
gem 'sass-rails', :git => 'https://github.com/rails/sass-rails.git'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Use V8 JavaScript interpreter
gem 'therubyracer'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder'

# Use ActiveModel has_secure_password
gem 'bcrypt-ruby'

# Use RedCloth for converting posts into HTML
gem 'RedCloth'

# Use bootstrap-sass
gem 'bootstrap-sass'

# Use StatHat to track statistics
gem 'stathat'

# Use friendly_id for user readable URLs and better SEO
gem 'friendly_id', '~> 5.0.0'

# Use will_paginate-bootstrap to paginate on Posts#index
gem 'will_paginate-bootstrap'

# Use whenever to publish posts
gem 'whenever'

# Social media gems to extend posts
gem 'twitter'

# Use codeclimate for code coverage
gem "codeclimate-test-reporter", group: :test, require: nil

# Use rspec-rails for testing
group :development, :test do
  gem 'rspec-rails', '~> 3.0.0'
  gem 'rspec-collection_matchers'
  gem 'factory_girl_rails', '~> 4.0'
  gem 'fuubar', :git => 'https://github.com/thekompanee/fuubar.git', :branch => 'master'
  gem 'spring'
end

# Development gems
group :development do
  gem 'capistrano'
  gem 'capistrano-rails'
  gem 'capistrano-rbenv'
  gem 'capistrano-bundler'
end
