<% @posts.each do |p| %>
	<article>
		<h1><%= p.title %></h1>
		<% # Use RedCloth to display p.content as HTML after sanitizing %>
		<%= sanitize RedCloth.new(p.content).to_html %>
		<small class="text-muted"><%= link_to '&infin;'.html_safe, p %> | Posted by <%= p.user_id ? User.find(p.user_id).first_name : 'a ghost' %> at <%= p.created_at.getlocal %></small>
	</article>
<% end %>
