<h1>Listing posts</h1>

	<table class="table table-hover">
	  <thead>
	    <tr>
	      <th>Title</th>
	      <th>Actions</th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @posts.each do |post| %>
	      <tr>
	        <td><%= post.title %></td>
	        <td><%= link_to 'Show', post, :class => 'btn btn-default' %>
							<%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-default' %>
							<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

<br>

<%= link_to 'New Post', new_post_path %>
