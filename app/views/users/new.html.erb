<%= form_for @user do |f| %>
<form role="form">
  <div class="row" style="margin-top:20px">
  <% if @user.errors.any? %>
    <div class="col-lg-8 col-lg-offset-2">
      <div class="alert alert-warning alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h3>Oops! Fix the issues to continue</h3>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
    <div class="col-lg-8 col-lg-offset-2 form-group">
      <%= f.label :user_name, :class => 'sr-only' %>
      <%= f.text_field :user_name, :class => 'form-control input-lg', :placeholder => 'User name' %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 form-group">
      <%= f.label :first_name, :class => 'sr-only' %>
      <%= f.text_field :first_name, :class => 'form-control input-lg', :placeholder => 'First name' %>
    </div>
    <div class="col-lg-8 col-lg-offset-2 form-group">
      <%= f.label :last_name, :class => 'sr-only' %>
      <%= f.text_field :last_name, :class => 'form-control input-lg', :placeholder => 'Last name' %>
    </div>
    <div class="col-lg-8 col-lg-offset-2 form-group">
      <%= f.label :password, :class => 'sr-only' %>
      <%= f.password_field :password, :class => 'form-control input-lg', :placeholder => 'Password' %>
    </div>
    <div class="col-lg-8 col-lg-offset-2 form-group">
      <%= f.label :password_confirmation, :class => 'sr-only' %>
      <%= f.password_field :password_confirmation, :class => 'form-control input-lg', :placeholder => 'Password confirmation' %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <%= f.submit "Sign Up", :class => 'btn btn-primary btn-lg' %>
    </div>
  </div>
</form>
<% end %>
