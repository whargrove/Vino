<% @posts.each do |p| %>
	<article>
		<% if p.link %>
			<h1><%= link_to '<span class="glyphicon glyphicon-link"></span>'.html_safe + '&nbsp;'.html_safe + p.title, p.link_url %></h1>
		<% else %>
			<h1><%= p.title %></h1>
		<% end %>
		<% # Use RedCloth to display p.content as HTML after sanitizing %>
		<%= sanitize RedCloth.new(p.content).to_html %>
		<small class="text-muted"><%= link_to '&infin;'.html_safe, p %> | Posted by <%= p.user_id ? User.find(p.user_id).first_name : 'a ghost' %> at <%= p.created_at.getlocal.strftime('%Y-%m-%d %l:%M:%S %p') %></small>
	</article>
<% end %>
